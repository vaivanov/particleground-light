{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "objectLiteralDuplicateProperties": false
    }
  },
  "globals": {
    "require": true,
    "module": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "for-direction": "error",
    "no-useless-computed-key": "error",
    "no-duplicate-imports": "error",
    "no-empty": "off",
    "no-console": "off",
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": true
      }
    ],
    "valid-typeof": "error",
    "no-eq-null": "off",
    "no-multi-spaces": "warn",
    "quotes": [
      "warn",
      "single"
    ],
    "semi": "error",
    "semi-style": [
      "error",
      "last"
    ],
    "indent": [
      "warn",
      2
    ],
    "arrow-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ]
  }
}